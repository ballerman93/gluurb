local player = game.Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")
local coreGui = game:GetService("CoreGui")
local toggled = false
local runLoop

local function tweakElement(element)
    if element:IsA("GuiObject") then
        local offsetX = math.random(-5, 5)
        local offsetY = math.random(-5, 5)
        local sizeX = math.random(-5, 5)
        local sizeY = math.random(-5, 5)
        local rotationOffset = math.random(-3, 3)
        element.Position = element.Position + UDim2.new(0, offsetX, 0, offsetY)
        element.Size = element.Size + UDim2.new(0, sizeX, 0, sizeY)
        element.Rotation = element.Rotation + rotationOffset
    end
end

local function tweakAllGui(parent)
    for _, element in pairs(parent:GetDescendants()) do
        tweakElement(element)
    end
end

local screenGui = Instance.new("ScreenGui")
screenGui.Parent = playerGui
local button = Instance.new("TextButton")
button.Size = UDim2.new(0, 250, 0, 70)
button.Position = UDim2.new(0.5, -125, 0.5, -35)
button.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
button.BorderColor3 = Color3.fromRGB(0, 0, 0)
button.BorderSizePixel = 5
button.TextColor3 = Color3.fromRGB(255, 255, 255)
button.TextScaled = true
button.Text = "shit yourself pro edition"
button.Active = true
button.Draggable = true
button.Parent = screenGui

button.MouseButton1Click:Connect(function()
    toggled = not toggled
    if toggled then
        runLoop = true
        spawn(function()
            while runLoop do
                tweakAllGui(playerGui)
                tweakAllGui(coreGui)
                wait(0.05)
            end
        end)
    else
        runLoop = false
    end
end)
